{
  "name": "engram-notion-mcp-monorepo",
  "private": true,
  "version": "0.2.0-rc.1",
  "type": "module",
  "author": "Shubham Omar",
  "workspaces": [
    "./node"
  ],
  "config": {
    "releaseType": "patch",
    "preid": "rc",
    "tagVersionPrefix": "REL-"
  },
  "license": "MIT",
  "scripts": {
    "get-version": "echo $npm_package_version",
    "get-name": "echo ${npm_package_name}",
    "prebuild": "rm -rf ./node/dist",
    "build": "bun build ./node/src/index.ts --outfile ./node/dist/index.js --target node --external better-sqlite3",
    "preremove-dependencies": "rm -f ./node/bun.lock ./bun.lock ./package-lock.json ./node/package-lock.json",
    "remove-dependencies": "rm -rf ./node/node_modules ./node_modules",
    "postremove-dependencies": "bun install --prefix ./node",
    "release": "npm version ${npm_config_release_type:-$npm_package_config_releaseType} --preid=${npm_config_preid:-$npm_package_config_preid} -m '[skip ci] [npm-auto-versioning] new released version v%s' --tag-version-prefix=${npm_config_tag_version_prefix:-$npm_package_config_tagVersionPrefix} --workspaces --include-workspace-root",
    "git-push": "git push --follow-tags"
  }
}